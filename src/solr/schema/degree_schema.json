{
  "add-field-type": [
    {
      "name": "stringText",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.StopFilterFactory",
            "words": "stopwords_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "synonyms_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          },
          {
            "class": "solr.RemoveDuplicatesTokenFilterFactory"
          },
          {
            "class": "solr.HyphenatedWordsFilterFactory"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "Portuguese"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.SuggestStopFilterFactory",
            "words": "stopwords_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "synonyms_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.RemoveDuplicatesTokenFilterFactory"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "Portuguese"
          }
        ]
      }
    },
    {
      "name": "int",
      "class": "solr.IntPointField"
    },
    {
      "name": "urlEmail",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.UAX29URLEmailTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.UAX29URLEmailTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "courseVector",
      "class": "solr.DenseVectorField",
      "vectorDimension": 384,
      "similarityFunction": "cosine",
      "knnAlgorithm": "hnsw"
    }
  ],
  "add-field": [
    {
      "name": "url",
      "type": "urlEmail",
      "indexed": false
    },
    {
      "name": "name",
      "type": "stringText"
    },
    {
      "name": "description",
      "type": "stringText"
    },
    {
      "name": "outings",
      "type": "stringText"
    },
    {
      "name": "typeOfCourse",
      "type": "stringText"
    },
    {
      "name": "duration",
      "type": "stringText"
    },
    {
      "name": "vector",
      "type": "courseVector",
      "indexed": true,
      "stored": true
    }
  ]
}