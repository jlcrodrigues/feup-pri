{
    "add-field-type": [
        {
            "name": "text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    },
                    {
                        "class": "solr.HyphenatedWordsFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.SuggestStopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    }
                ]
            }
        },
        {
            "name": "urlEmail",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            }
        },
        {
            "name": "int",
            "class": "solr.IntPointField"
        },
        {
            "name": "nestedDoc",
            "class": "solr.NestPathField"
        }
    ],
    "add-field": [
        {
            "name": "url",
            "type": "urlEmail"
        },
        {
            "name": "name",
            "type": "text"
        },
        {
            "name": "description",
            "type": "text"
        },
        {
            "name": "outings",
            "type": "text"
        },
        {
            "name": "typeOfCourse",
            "type": "text"
        },
        {
            "name": "duration",
            "type": "text"
        },
        {
            "name": "course_units",
            "type": "nestedDoc",
            "multiValued": true
        },
        {
            "name": "id_course",
            "type": "int",
            "docValues": true
        },
        {
            "name": "year",
            "type": "int",
            "docValues": true
        }
    ]
}