{
    "add-field-type": [
        {
            "name": "text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    },
                    {
                        "class": "solr.HyphenatedWordsFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.SuggestStopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    }
                ]
            }
        },
        {
            "name": "urlEmail",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            }
        },
        {
            "name": "int",
            "class": "solr.IntPointField"
        },
        {
            "name": "nestedDoc",
            "class": "solr.NestPathField"
        },
        {
            "name": "stringAbbreviation",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.NGramTokenizerFactory",
                    "minGramSize": 2,
                    "maxGramSize": 13
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.NGramTokenizerFactory",
                    "minGramSize": 2,
                    "maxGramSize": 13
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            }
        }
    ],
    "add-field": [
        {
            "name": "name",
            "type": "text"
        },
        {
            "name": "personalWebsite",
            "type": "urlEmail"
        },
        {
            "name": "institutionalWebsite",
            "type": "urlEmail"
        },
        {
            "name": "abbreviation",
            "type": "stringAbbreviation"
        },
        {
            "name": "status",
            "type": "text"
        },
        {
            "name": "code",
            "type": "int"
        },
        {
            "name": "institutionalEmail",
            "type": "urlEmail",
            "multiValued": false
        },
        {
            "name": "phone",
            "type": "text"
        },
        {
            "name": "rank",
            "type": "text"
        },
        {
            "name": "personalPresentation",
            "type": "text"
        },
        {
            "name": "fieldsOfInterest",
            "type": "text"
        },
        {
            "name": "courses",
            "type": "nestedDoc",
            "multiValued": true
        },
        {
            "name": "id_course",
            "type": "int"
        },
        {
            "name": "type",
            "type": "text"
        }
    ]
}