{
  "add-field-type": [
    {
      "name": "stringText",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.StopFilterFactory",
            "words": "stopwords_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "synonyms_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          },
          {
            "class": "solr.RemoveDuplicatesTokenFilterFactory"
          },
          {
            "class": "solr.HyphenatedWordsFilterFactory"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "Portuguese"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.SuggestStopFilterFactory",
            "words": "stopwords_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "synonyms_pt.txt",
            "ignoreCase": true
          },
          {
            "class": "solr.RemoveDuplicatesTokenFilterFactory"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "Portuguese"
          }
        ]
      }
    },
    {
      "name": "int",
      "class": "solr.IntPointField"
    },
    {
      "name": "urlEmail",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.UAX29URLEmailTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.UAX29URLEmailTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "stringCode",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.NGramTokenizerFactory",
          "minGramSize": 2,
          "maxGramSize": 15
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    }
  ],
  "add-field": [
    {
      "name": "id_db",
      "type": "stringText"
    },
