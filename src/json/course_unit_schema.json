{
    "add-field-type": [
        {
            "name": "text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    },
                    {
                        "class": "solr.HyphenatedWordsFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SnowballPorterFilterFactory",
                        "language": "Portuguese"
                    },
                    {
                        "class": "solr.SuggestStopFilterFactory",
                        "words": "lang/stopwords_pt.txt",
                        "format": "snowball",
                        "ignoreCase": true
                    }
                ]
            }
        },
        {
            "name": "urlEmail",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.UAX29URLEmailTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            }
        },
        {
            "name": "int",
            "class": "solr.IntPointField"
        },
        {
            "name": "stringCode",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.NGramTokenizerFactory",
                    "minGramSize": 2,
                    "maxGramSize": 15
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.NGramTokenizerFactory",
                    "minGramSize": 2,
                    "maxGramSize": 13
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    }
                ]
            }
        }
    ],
    "add-field": [
        {
            "name": "id_db",
            "type": "text"
        },
        {
            "name": "name",
            "type": "text"
        },
        {
            "name": "url",
            "type": "urlEmail"
        },
        {
            "name": "code",
            "type": "stringCode"
        },
        {
            "name": "language",
            "type": "text"
        },
        {
            "name": "ects",
            "type": "int",
            "docValues": true
        },
        {
            "name": "objective",
            "type": "text"
        },
        {
            "name": "results",
            "type": "text"
        },
        {
            "name": "workingMethod",
            "type": "text"
        },
        {
            "name": "preRequirements",
            "type": "text"
        },
        {
            "name": "program",
            "type": "text"
        },
        {
            "name": "evaluationType",
            "type": "text"
        },
        {
            "name": "passingRequirements",
            "type": "text"
        }
    ]
}